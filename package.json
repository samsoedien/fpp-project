{
  "name": "food-printing-platform",
  "version": "1.0.0",
  "description": "An online platform for creating, sharing and modifying digital CAD files for 3D food printing.",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "set PORT=4000 && node server.js",
    "server": "set PORT=4000 && nodemon server.js --ignore client",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "food",
    "3D",
    "printing",
    "chef",
    "cooking",
    "preparation",
    "consumption",
    "restaurant",
    "digital",
    "CAD",
    "data",
    "experience"
  ],
  "author": "Samsoedien",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.1",
    "express": "^4.16.3",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.5",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.4.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.3"
  }
}