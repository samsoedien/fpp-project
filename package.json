{
  "name": "food-printing-platform",
  "version": "1.0.0",
  "description": "An online platform for creating, sharing and modifying digital CAD files for 3D food printing.",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "set PORT=4000 && node server.js",
    "server": "set PORT=4000 && nodemon server.js --ignore client",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test": ""
  },
  "keywords": [
    "food",
    "3D",
    "printing",
    "chef",
    "cooking",
    "preparation",
    "consumption",
    "restaurant",
    "digital",
    "CAD",
    "data",
    "experience"
  ],
  "author": "Samsoedien <n.samsoedien@student.tue.nl> (https://samsoedien.com)",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.1",
    "dotenv": "^6.1.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "^3.1.8",
    "mongoose": "^5.3.9",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.8.0"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6"
  }
}
